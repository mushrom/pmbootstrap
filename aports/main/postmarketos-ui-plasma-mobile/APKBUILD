pkgname=postmarketos-ui-plasma-mobile
pkgver=1
pkgrel=3
pkgdesc="Meta package for Plasma Mobile"
url="https://github.com/postmarketOS"
arch="noarch"
license="GPL3+"
depends="plasma-mobile plasma-phone-components dbus-nox11
	breeze-icons postmarketos-demos plasma-maliit-plugins"
makedepends=""
install="$pkgname.post-install"
subpackages=""
source="start_plasma.sh startkwin.sh"
options="!check"

package() {
	install -D -m644 "$srcdir"/start_plasma.sh \
		"$pkgdir"/etc/profile.d/start_plasma.sh
	install -D -m644 "$srcdir"/startkwin.sh \
		"$pkgdir"/bin/startkwin.sh
}
