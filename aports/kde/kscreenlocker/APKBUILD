pkgname=kscreenlocker
pkgver=5.11.0
pkgrel=1
pkgdesc='Library and components for secure lock screen architecture'
arch="all"
url='https://www.kde.org/workspaces/plasmadesktop/'
license="LGPL"
depends=""
makedepends="extra-cmake-modules python kdoctools-dev kcmutils-dev libxcursor consolekit2-dev
			 linux-pam-dev kidletime-dev kwayland-dev kdeclarative-dev qt5-qtdeclarative-dev
			 kcrash-dev kdeclarative-dev kglobalaccel-dev ki18n-dev ktextwidgets-dev
			 kwindowsystem-dev kxmlgui-dev kconfig-dev sonnet-dev kconfigwidgets-dev
			 kauth-dev kcoreaddons-dev kcodecs-dev kwidgetsaddons-dev kservice-dev
			 kpackage-dev knotifications-dev solid-dev xcb-util-keysyms-dev qt5-x11extras-dev"
source="https://download.kde.org/stable/plasma/$pkgver/$pkgname-$pkgver.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

prepare() {
	mkdir -p $srcdir/build
}

build() {
	cd $srcdir/build
	cmake "$srcdir"/$pkgname-$pkgver \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DKDE_INSTALL_LIBDIR=lib \
		-DKDE_INSTALL_LIBEXECDIR=/usr/lib \
		-DBUILD_TESTING=OFF
	make
}

package() {
	cd $srcdir/build
	make DESTDIR="$pkgdir" install
}

sha512sums="62b2ead4f712db7710302cd35dc04d38eff594914871c279e5665e3593648f493aeec5cee0a3ba0a074b4e6866208b711d1cd9c6f8a6013bbf552eaae1954fd8  kscreenlocker-5.11.0.tar.xz"
