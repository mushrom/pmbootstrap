pkgname=kidletime
pkgver=5.38.0
pkgrel=1
pkgdesc='Monitoring user activity'
arch="all"
url='https://community.kde.org/Frameworks'
license="LGPL"
depends=""
makedepends="extra-cmake-modules mesa-dev doxygen qt5-qttools-dev qt5-x11extras-dev"
source="https://download.kde.org/stable/frameworks/${pkgver%.*}/${pkgname}-${pkgver}.tar.xz"
subpackages="$pkgname-dev $pkgname-doc"

prepare() {
	mkdir -p $srcdir/build
}

build() {
	cd $srcdir/build
	cmake "$srcdir"/${pkgname}-${pkgver} \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DKDE_INSTALL_LIBDIR=lib \
		-DBUILD_TESTING=OFF \
		-DBUILD_QCH=ON
	make
}

package() {
	cd $srcdir/build
	make DESTDIR="${pkgdir}" install
}
sha512sums="7318e2fd372cba52c3d386d66da330fa801add715e06ef895eba1bd61c101ba9bdc8494f4ad085a569fe411ce4f7678f0fc7cb0863a3eea1b5c376b8f16771e9  kidletime-5.38.0.tar.xz"
