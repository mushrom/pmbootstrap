pkgname=plasma-mobile
pkgver=1
pkgrel=0
#commit=8005327e22c54b1e7e4be20c844819a43aa7d108
pkgdesc="Plasma Mobile"
arch="all"
url="https://community.kde.org/Plasma/Mobile"
license="GPL-2.0"
depends="plasma-workspace solid solid-libs desktop-file-utils powerdevil polkit-kde-agent"
depends_dev=""
makedepends="extra-cmake-modules kdoctools-dev plasma-workspace-dev qt5-qtdeclarative-dev
			 kio-dev kdelibs4support-dev kwindowsystem-dev kwayland-dev karchive-dev sonnet-dev
			 knotifications-dev kiconthemes-dev plasma-framework-dev kpackage-dev kdeclarative-dev
			 kactivities-dev kcodecs-dev kcoreaddons-dev solid-dev kconfig-dev kauth-dev
			 kdbusaddons-dev ki18n-dev kservice-dev kcompletion-dev kbookmarks-dev kwidgetsaddons-dev
			 kitemviews-dev kjobwidgets-dev kxmlgui-dev kconfigwidgets-dev kcrash-dev kdesignerplugin 
			 kdesignerplugin-dev kemoticons-dev kguiaddons-dev kitemmodels-dev kinit-dev
			 kparts-dev ktextwidgets-dev kunitconversion-dev solid-dev solid-libs"
install="$pkgname.post-install
		 $pkgname.post-upgrade
		 $pkgname.post-deinstall"
source="$pkgname-$pkgver.tar.gz"

prepare() {
	mkdir -p "$srcdir"/build
}

build() {
	cd "$srcdir"/build
	cmake "$srcdir"/$pkgname \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DLIB_INSTALL_DIR=lib \
		-DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
		-DCMAKE_BUILD_TYPE=Release
	make
}

check() {
	cd "$srcdir"/build
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	cd "$srcdir"/build
	make DESTDIR="$pkgdir/" install
}
sha512sums="103daf5dd2fa5057f7db4c2ccd016cdb632e1e44062104d82c262e4e0a50dc4e2d6a3e557742bb434263641bebc4afed7f43702e53faf0bc312ee8f49a3a3ce7  plasma-mobile-1.tar.gz"
