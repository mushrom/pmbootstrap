pkgname=plasma-maliit-plugins
pkgver=9
pkgrel=1
commit=0b5cdb59bd1b6bc1f88d815e8b97750fdd014993
pkgdesc="Plasma Integration for Maliit virtual keyboard"
arch="noarch"
url="http://projects.kde.org/plasma-maliit-plugins"
license="GPL"
depends=""
makedepends="qt5-qtbase-dev qt5-qtdeclarative-dev plasma-maliit-framework-dev"
source=$pkgname-$commit.tar.gz::https://github.com/KDE/plasma-maliit-plugins/archive/$commit.tar.gz
builddir="$srcdir/$pkgname-$commit"
options="!check"

build() {
    qmake-qt5 CONFIG+=notests CONFIG+=nodoc CONFIG+=disable-maliit-keyboard "$srcdir"/plasma-maliit-plugins-$commit
    make
}

package() {
    cd "$builddir"
    make install INSTALL_ROOT="$pkgdir/"
}
