pkgname=kplotting
pkgver=5.38.0
pkgrel=1
pkgdesc='Lightweight plotting framework'
arch="all"
url='https://community.kde.org/Frameworks'
license="LGPL"
depends=""
makedepends="extra-cmake-modules mesa-dev doxygen qt5-qtbase qt5-qttools-dev"
source="https://download.kde.org/stable/frameworks/${pkgver%.*}/${pkgname}-${pkgver}.tar.xz"
subpackages="$pkgname-dev $pkgname-doc"

prepare() {
	mkdir -p $srcdir/build
}

build() {
	cd $srcdir/build
	cmake "$srcdir"/${pkgname}-${pkgver} \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DKDE_INSTALL_LIBDIR=lib \
		-DBUILD_TESTING=OFF \
		-DBUILD_QCH=ON
	make
}

package() {
	cd $srcdir/build
	make DESTDIR="${pkgdir}" install
}

sha512sums="a7c09c49686c571d97c14c6017634575aba61e7e93ccd9c44442ea1953c64cf64e7d68d2606d823dae5d05832f38c7d54c8786d5906a8f8cda8d35fb58b55fcc  kplotting-5.38.0.tar.xz"
