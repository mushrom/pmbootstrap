pkgname=threadweaver
pkgver=5.38.0
pkgrel=1
pkgdesc='High-level multithreading framework'
arch="all"
url='https://community.kde.org/Frameworks'
license="LGPL"
depends=""
makedepends="extra-cmake-modules mesa-dev qt5-qtbase qt5-qttools-dev doxygen qt5-qtdeclarative-dev"
source="https://download.kde.org/stable/frameworks/${pkgver%.*}/${pkgname}-${pkgver}.tar.xz"
subpackages="$pkgname-dev $pkgname-doc"

prepare() {
	mkdir -p $srcdir/build
}

build() {
	cd $srcdir/build
	cmake "$srcdir"/${pkgname}-${pkgver} \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DKDE_INSTALL_LIBDIR=lib \
		-DBUILD_TESTING=OFF \
		-DBUILD_QCH=ON
	make
}

package() {
	cd $srcdir/build
	make DESTDIR="${pkgdir}" install
}

sha512sums="be6702c755b597ff6dd485809d4f48bcbc5e4ffdac5222fb9478dffaef942557e6cc405bc421a47266b2e0d0ac10e81a26ebb7277d03c0cca182f565471031de  threadweaver-5.38.0.tar.xz"
