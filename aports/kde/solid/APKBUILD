pkgname=solid
pkgver=5.38.0
pkgrel=1
pkgdesc='Hardware integration and detection'
arch="all"
url='https://community.kde.org/Frameworks'
license="LGPL"
depends=""
makedepends="extra-cmake-modules qt5-qttools-dev doxygen eudev-dev flex-dev bison qt5-qtdeclarative-dev
			 upower-dev udisks2-dev"
source="https://download.kde.org/stable/frameworks/${pkgver%.*}/${pkgname}-${pkgver}.tar.xz"
subpackages="$pkgname-dev $pkgname-libs $pkgname-doc $pkgname-lang"

prepare() {
	mkdir -p "$srcdir"/build
}

build() {
	cd "$srcdir"/build
	cmake "$srcdir"/${pkgname}-${pkgver} \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DKDE_INSTALL_LIBDIR=lib \
		-DBUILD_TESTING=OFF \
		-DBUILD_QCH=ON
	make
}

package() {
	cd "$srcdir"/build
	make DESTDIR="${pkgdir}" install
}
sha512sums="1b6c755c242f04aed776dda3aba4e0377636230ff616374bf87d0f50d47846a252817e9a08df5ec08b8a30844dc799fcc9450a2288a1ceed30ca5b326c0e3fa7  solid-5.38.0.tar.xz"
